
    <div class="panel panel-default" style="margin:20px 20px 0px;display:inline-block">
        <div class="panel-heading"
             style="display:inline-block;background:#F8F8F8;padding:0px 15px;width:80px;height:100%;border-color:#F8F8F8;border-right:1px #ddd solid;">
            <h5 style="color:#777;padding:0px;height:10px">FILTER </h5></div>
        <div class="panel-body" style="padding:0px;display:inline-block;">
            <div id="filtering" style="margin-left: 15px;margin-right: 15px">
                <label class="checkbox-inline">
                    <input type="checkbox" id="allFilters" value="option0" checked> All/None
                </label>
                {{#each filters}}
                <label class="checkbox-inline">
                    <input type="checkbox" id={{@key}} value="option1" checked>{{this}}
                </label>
                {{/each}}

            </div>
        </div>
    </div>
