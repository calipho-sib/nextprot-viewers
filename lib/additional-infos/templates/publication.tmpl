<div class="publication-container">
    {{#publication}} {{#if title}}
        <p><a href="{{localUrl}}"  target='_parent'>{{title}}</a></p>{{/if}}
        <p><span class="hyperlink-blue">{{#each authors}}{{lastName}} {{initials}}. , {{/each}}</span>
        {{journal}} <strong>{{#journalResourceLocator}}{{medAbbrev}} {{/journalResourceLocator}}</strong>, {{firstPage}} - {{lastPage}} ({{publicationYear}}) {{#each dbXrefs}}[{{databaseName}} : {{> external-link href=resolvedUrl text=accession}}] {{/each}}
        </p>
        {{#if abstractText}}
        <button class="btn btn-primary btn-xs collapsed" type="button" data-toggle="collapse" data-target="#collapse{{publicationId}}{{../parentId}}" aria-expanded="false" aria-controls="collapse{{publicationId}}{{../parentId}}">
            <span class="pubDisplayStatus"></span> abstract
        </button>
        <div class="collapse" id="collapse{{publicationId}}{{../parentId}}">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Abstract</h3>
                </div>
                <div class="panel-body">{{abstractText}}</div>
            </div>
        </div>{{else}}No Abstract available{{/if}}
        {{else}}
            {{#if crossRef}}
                {{#crossRef}}
                <p>{{{linkTo name url}}}</p>
                {{/crossRef}}
            {{/if}}
    {{/publication}}
</div>